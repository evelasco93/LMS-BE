{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "handler/**/*",
    "common/**/*"
  ],
  "exclude": [
    "node_modules",
    "cdk",
    "cdk.out",
    "scripts",
    "dist",
    "**/*.test.ts"
  ]
}
